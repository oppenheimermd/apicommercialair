@page
@model apicommercialair.web.Pages.Airplanes.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<div class="container-fluid">
    <h1 class="mt-4">Details for: @Model.Aircraft.Name</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item">
            <a asp-area="" asp-page="/Admin/Index">Dashboard</a>
        </li>

        <li class="breadcrumb-item active">@Model.Aircraft.Name</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-plus-square"></i>
            Add a new aircraft
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Aircraft.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Aircraft.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Aircraft.AircraftCategory)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Aircraft.AircraftCategory)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Aircraft.Manufacturer)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Aircraft.Manufacturer.Id)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Aircraft.FirstFlight)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Aircraft.FirstFlight)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Aircraft.Introduction)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Aircraft.Introduction)
                </dd>
            </dl>
            <div>
                <a asp-page="./Edit" asp-route-id="@Model.Aircraft.Id">Edit</a> |
                <a asp-page="./Index">Back to List</a>
            </div>
        </div>
    </div>

</div>


@section Scripts {
    <script>

        $(document).ready(function () {
            $("a#aircraft-all").addClass("active");
            $('#aircraft-all').click();
        });
    </script>
}